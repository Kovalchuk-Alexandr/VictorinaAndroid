<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/glass"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/question_label"
        android:layout_width="233dp"
        android:layout_height="84dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text=""
        android:textColor="#303030"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="202dp"
        android:background="@color/btn_correct"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:text="@string/btn_correct" />
    <!--        android:background="@drawable/rounded_edit_text"-->

    <Button
        android:id="@+id/btn_incorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="216dp"
        android:layout_marginTop="202dp"
        android:background="@color/btn_incorrect"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:text="@string/btn_incorrect" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="307dp"
        android:background="@color/btn_next"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:text="@string/btn_next"
        android:visibility="invisible" />

</RelativeLayout>